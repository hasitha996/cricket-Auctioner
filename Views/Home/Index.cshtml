@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4"><b>Crick</b>Auctioner</h1>

    <div class="row">
        <div class="col">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="~/images/ipl.png" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Player Registration Open for IPL </h5>
                    <p class="card-text">Apply for IPL 2023 Season Now</p>
                     <a class="btn btn-primary" asp-area="" asp-controller="PlayerAccounts" asp-action="Register">Apply</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="~/images/bbl.png" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Player Registration Open for Big Bash Legue</h5>
                    <p class="card-text">Apply for BBL 2023 Season Now</p>
                     <a class="btn btn-primary" asp-area="" asp-controller="PlayerAccounts" asp-action="Register">Apply</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="~/images/lpl.png" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Player Registration Open for LPL 2022</h5>
                    <p class="card-text">Apply for LPL 2022 Season Now</p>
                    <a class="btn btn-primary" asp-area="" asp-controller="PlayerAccounts" asp-action="Register">Apply</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="~/images/psl.png" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Card title</h5>
                    <p class="card-text">Apply for IPL 2023 Season Now</p>
                     <a class="btn btn-primary" asp-area="" asp-controller="PlayerAccounts" asp-action="Register">Apply</a>
                </div>
            </div>
        </div>


    </div>


</div>


